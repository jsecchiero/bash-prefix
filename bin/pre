#!/bin/bash

export PREFIX_HOME="$(dirname $0)/.."

prefix() {

    export pre=${@}
    export PS1="$pre> "

    [[ -f $PREFIX_HOME/lib/bash-preexec/bash-preexec.sh ]] && source $PREFIX_HOME/lib/bash-preexec/bash-preexec.sh
    preexec() { $pre $1; kill -INT $$; };
    export -f preexec
}

export -f prefix

bash --rcfile <( echo prefix $@ )
